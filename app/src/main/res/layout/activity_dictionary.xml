<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/Main_color"
    android:layout_height="match_parent"
    tools:context=".DictionaryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_weight=".2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_family"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:src="@mipmap/ic_family_foreground"/>
        <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".5"
            android:id="@+id/iv_alphaptic"
        android:src="@mipmap/ic_alphaptic_foreground"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_weight=".2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/iv_learn"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:src="@mipmap/ic_education_foreground"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/iv_house"
            android:src="@mipmap/ic_house_foreground"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_weight=".2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/iv_animals"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:src="@mipmap/ic_animals_foreground"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/iv_count"
            android:src="@mipmap/ic_count_foreground"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_weight=".2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/iv_oppisite"
            android:src="@mipmap/ic_opp_foreground"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/iv_food"
            android:src="@mipmap/ic_food_foreground"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_weight=".2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/iv_season"
            android:src="@mipmap/ic_season_foreground"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/iv_health"
            android:src="@mipmap/ic_health_foreground"/>
    </LinearLayout>
</LinearLayout>